---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<button class="broken-border relative py-2 pr-4">
  <svg
    width="243"
    height="41"
    viewBox="0 0 243 41"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    class="absolute -left-6 top-0"
  >
    <path d="M31 1H242.5V40H232M225.5 40H218.5M192 40H1V1H9" stroke="black"
    ></path>
  </svg>
  <span class="-ml-1 font-light uppercase"><code>&#8212;</code> {title} </span>
</button>
